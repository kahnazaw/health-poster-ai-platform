{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "mvn clean package -DskipTests"
  },
  "deploy": {
    "startCommand": "java -jar target/health-poster-ai-platform-1.0.0.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "_comment": "Railway deployment configuration for Health Poster AI Platform. See MAINTENANCE_GUIDE_AR.md for deployment management instructions."
}

