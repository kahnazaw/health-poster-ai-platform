{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd java-backend && mvn clean package -DskipTests"
  },
  "deploy": {
    "startCommand": "cd java-backend && java -jar target/health-poster-ai-platform-1.0.0.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "_comment": "Railway deployment configuration for Health Poster AI Platform - Backend API only. Frontend should be deployed separately on Vercel."
}

